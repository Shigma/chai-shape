{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "noEmit": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "paths": {
      "chai-shape": ["src"],
    },
  },
  "include": [
    "src",
  ],
}